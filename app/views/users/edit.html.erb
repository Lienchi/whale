<div class="container page-margin">
  <div class="row">

    <div class="col-md-4 col-md-offset-4">

      <h4 class="title table-title"><span class="title-main">變更顯示名稱</span></h4>

      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group" style="text-align:center;">
          <%= f.submit "變更", class: "btn-submit", style: "width:50%;" %>
        </div>
      <% end %>

    </div>

  </div>
</div>