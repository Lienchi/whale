
<div class="container">
    <%= render :partial => "shared/tabs_admin", :locals => { :selected_item => '進階設定' } %>

  <table class="table">
    <thead>
      <tr>
        <th>設置</th>
        <th>設定內容</th>
        <th>功能</th>
      </tr>
    </thead>
    <tbody>          
      <% @settings.each do |setting| %>
        <tr>         
          <td><%= setting.note %></td>
          <td><%= setting.content %></td>
          <td class="data-table">
            <%= link_to '<i class = "fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_cashier_setting_path(id: setting.id), onclick:"edit" , caption: "編輯" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


