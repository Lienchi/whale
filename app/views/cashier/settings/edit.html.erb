<div class="container">
  <%= render :partial => "shared/tabs_admin", :locals => { :selected_item => '進階設定' } %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h4 class="title table-title"><span class="title-main"><%= @setting.note %></span></h4>
      <%= form_for [:cashier, @setting] do |f| %>
        <div class="form-group">
         
          <%= f.label :content, "內容" %>
          <%= f.text_field :content, class: "form-control"%>
          <br>
          <div class="form-group" style="text-align:center;">
            <%= f.submit "確定", class: "btn-submit", style: "width:50%;" %>
          </div>
        </div>
      <% end %>
   </div>
  </div>
</div>
