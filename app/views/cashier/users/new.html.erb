<div class="container">
  <div class="row">
    <%= render :partial => "shared/tabs_admin", :locals => { :selected_item => '門市人員資料' } %>
    <div class="col-md-4 col-md-offset-4">

      <h4 class="title table-title"><span class="title-main">新增門市人員帳號</span></h4>

      <%= form_for [:cashier, @user] do |f| %>
        <div class="form-group">
          <%= f.label :email, "Email" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group" style="text-align:center;">
          <%= f.submit "新增", class: "btn-submit", style: "width:50%" %>
        </div>
      <% end %>

    </div>

  </div>
</div>