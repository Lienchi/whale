<div class="container">
 
  <%= render :partial => "shared/tabs1", :locals => { :selected_item => '訂單資訊' } %>
  <%= render :partial => "shared/tab_order", :locals => { :selected_item => '今日訂單' } %>
  
  <table class="table table-hover" data-toggle="table" id="table" >
    <thead>
      <tr>
        <th data-sortable="true" data-field="created_at">訂購日期</th>
        <th data-sortable="true" data-field="id">編號</th>
        <th>結帳人員</th>
        <th>顧客編號</th>
        <th>付款方式</th>
        <th>取貨方式</th>
        <th data-sortable="true" data-field="amount">總金額</th>
        <th>狀態</th>
        <th>功能</th>
      </tr>
    </thead>
    <tbody>
      
      <% @orders.each do |order|%>
      <tr>
        <td><%= order.created_at.to_s[0..15] %></td>
        <td><%= link_to (cashier_order_path(order.id)) do %><%= order.sn %><% end %></td>
        <td><%= order.user.name %></td>
        <td>
          <% if order.member_id == -1%>
            非會員
          <% else%>
            <%= order.member_id%>
            <% if @orders.where(member_id: order.member_id).count >= 2 %>
              <span class="label label-success">回購</span>
            <% else%>
              <span class="label label-primary">首購</span>
            <% end%>
          <% end%>
        </td>
        <td><%= order.payment_method %></td>
        <td><%= order.address %></td>
        <td class="alnright"><%= number_to_currency(order.amount, precision: 0)%></td>
        <% if order.status %>
          <td>已取貨</td>
        <% else %>
          <td class="text-danger">未取貨</td>
        <% end%>      
        <td>
          <%= link_to "編輯訂單",edit_cashier_order_path(order.id) %>｜
          <% if order.member_id == -1 %>
            <%= link_to "訂單歸戶", set_member_cashier_order_path(order.id) %>｜
          <% else %>
            <span style="color: gray;">訂單歸戶</span>｜
          <% end %>
          <% if order.guest_id == nil %>
            <%= link_to "建立客情",new_guest_cashier_order_path(order.id) %>
          <% else %>
            <span style="color: gray;">建立客情</span>  
          <% end %>
        </td>
      </tr>
      
      <% end %>
    </tbody>
  </table>
</div>
<br>

